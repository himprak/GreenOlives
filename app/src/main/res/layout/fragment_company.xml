<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/company_name_label"/>

    <EditText
        android:id="@+id/company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/company_name_hint"/>

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/company_details_label"/>

    <Button
        android:id="@+id/company_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Sat Dec 28 13:42 IST 2019"/>

    <CheckBox
        android:id="@+id/company_funded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/company_funded_label"/>


</LinearLayout>